[user]
	name = Alden Quimby
	email = aldenquimby@gmail.com

[credential]
	helper = osxkeychain

[push]
	default = simple

[color]
	diff = auto
	status = auto
	branch = auto
	interactive = auto
	ui = true
	pager = true

[color "branch"]
	remote = white

[color "status"]
	added = yellow
	changed = cyan
	untracked = magenta
	deleted = red

[alias]
	aa = add -A
	cm = commit -m
	co = checkout
	cb = checkout -b
	df = diff
	dfc = diff --cached
	lg = log --graph --pretty=format:'%C(yellow)%d%Creset %C(bold blue)%s%Creset %Cgreen(%cr) %Cred<%an>%Creset' --abbrev-commit --date=relative
	mm = !git checkout master && git pull && git checkout - && git merge master
	pb = push --set-upstream origin
	prm = "!f() { hub pull-request -m \"$1\" | xargs open; }; f"
	st = status -sb
	subup = !git pull --recurse-submodules && git submodule update
	trim = "!f() { git fetch && git remote prune origin; git branch --merged | grep -v \"^\\*\\|master$\" | xargs -n 1 git branch -d; }; f"
	whois = "!sh -c 'git log -i -1 --pretty=\"format:%an <%ae>\n\" --author=\"$1\"' -"

[merge]
	tool = kdiff3
